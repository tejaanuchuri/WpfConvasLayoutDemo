<Window x:Class="ConvasLayoutDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvasLayoutDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Height="380" Width="780">
            <Ellipse Canvas.Left="30" Canvas.Top="30" Fill="Gray" Width="200" Height="120"/>
            <Ellipse Canvas.Right="30" Canvas.Top="30" Fill="Aqua" Width="200" Height="120"/>
            <Ellipse Canvas.Left="30" Canvas.Bottom="30" Fill="LawnGreen" Width="200" Height="120"/>
            <Ellipse Canvas.Right="30" Canvas.Bottom="30" Fill="DeepSkyBlue" Width="200" Height="120"/>
        </Canvas>
    </Grid>
</Window>
